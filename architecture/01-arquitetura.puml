@startuml arquitetura-projeto
!theme cerulean-outline
skinparam backgroundColor #0a192f
skinparam defaultFontColor #ffffff
skinparam defaultFontSize 14
skinparam ArrowColor #d4af37
skinparam ComponentBackgroundColor #1a365d
skinparam ComponentBorderColor #d4af37
skinparam DatabaseBackgroundColor #1a365d
skinparam DatabaseBorderColor #d4af37
skinparam CloudBackgroundColor #1a365d
skinparam CloudBorderColor #d4af37

title <font color="#d4af37" size="24">Arquitetura do Projeto</font>

package "CLIENTE" #1a365d {
  [Browser] as browser
  note right of browser
    <font color="#d4af37">Next.js</font>
    React
    TypeScript
    Tailwind CSS
  end note
}

package "SERVIDOR" #1a365d {
  [API REST] as api
  note right of api
    <font color="#d4af37">NestJS</font>
    Node.js
    TypeScript
    GraphQL
  end note
}

database "BANCO DE DADOS" #1a365d {
  [PostgreSQL] as pg
  [Redis] as redis
  note right of pg
    Prisma ORM
    Migrations
    Backups
  end note
}

cloud "INFRAESTRUTURA" #1a365d {
  [VPS] as vps
  [Docker] as docker
  [Cloudflare] as cf
  [DNS/SSL] as dns
}

browser -down-> api : <font color="#d4af37">HTTPS</font>
api -down-> pg : <font color="#d4af37">Queries</font>
api -down-> redis : <font color="#d4af37">Cache</font>
api -right-> vps
vps -right-> docker
docker -right-> cf
cf -right-> dns

@enduml
